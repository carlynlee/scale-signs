xset s off
xset s noblank
xset dpms 0 0 0
xset -dpms

xrandr --newmode "1920x1080_60.00" 172.80 1920 2040 2248 2576 1080 1081 1084 1118 -HSync +Vsync
xrandr --addmode HDMI-1 "1920x1080_60.00"
xrandr --output HDMI-1 --mode "1920x1080_60.00"

if [ -e /sys/class/input/mouse0 ]
then
	while true; do
		/usr/bin/reg.py
	done
else
	while true; do
		/usr/bin/web.py &
		sleep 60
		kill %%
		sleep 1
	done
fi
